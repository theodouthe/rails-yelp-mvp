<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name, placeholder: 'restaurant name', label: 'Restaurant name', error: 'Name is mandatory, please specify one' %>
    <%= f.input :address, placeholder: 'address', hint: 'No special characters.', error: 'Address is mandatory, please specify one' %>
    <%= f.input :phone_number, placeholder: 'user@domain.com', error: 'Phone number is mandatory, please specify one' %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], error: 'Category is mandatory, please specify one' %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
<%= link_to 'back to restaurants list', restaurants_path, class: "btn btn-primary" %>
